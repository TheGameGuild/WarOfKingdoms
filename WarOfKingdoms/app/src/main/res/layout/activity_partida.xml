<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Partida">


    <LinearLayout
        android:id="@+id/linearLayoutCards"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginTop="560dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/caballero"
            android:layout_width="102dp"
            android:layout_height="168dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/caballero" />

        <ImageView
            android:id="@+id/dragon"
            android:layout_width="104dp"
            android:layout_height="167dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/dragon"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="1077dp" />

        <ImageView
            android:id="@+id/rey"
            android:layout_width="97dp"
            android:layout_height="167dp"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            app:srcCompat="@drawable/rey" />

        <ImageView
            android:id="@+id/tigre"
            android:layout_width="wrap_content"
            android:layout_height="166dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/tigre" />

    </LinearLayout>


    <TextView
        android:id="@+id/vida_enemiga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="@string/_5"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/statsTextView"
        android:layout_width="375dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="15dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>